{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "typings.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/dev.ts"
  ]
}
