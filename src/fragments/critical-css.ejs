<style>
  @font-face {
    font-family: 'Humana Serif';
    font-style: normal;
    font-weight: 400;
    src: url('fonts/humana-serif.woff2') format('woff2');
    font-display: swap;
  }

  @font-face {
    font-family: 'Humana Serif';
    font-style: italic;
    font-weight: 400;
    src: url('fonts/humana-serif-itc.woff2') format('woff2');
    font-display: swap;
  }

  @font-face {
    font-family: 'Rosario';
    font-style: normal;
    font-weight: 400;
    src: url('fonts/rosario.woff2') format('woff2');
    font-display: fallback;
  }

  @font-face {
    font-family: 'Rosario';
    font-style: normal;
    font-weight: 700;
    src: url('fonts/rosario-bld.woff2') format('woff2');
    font-display: fallback;
  }

  @font-face {
    font-family: 'Rosario';
    font-style: italic;
    font-weight: 400;
    src: url('fonts/rosario-itc.woff2') format('woff2');
    font-display: fallback;
  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  html, body {
    width: 100%;
    height: 100%;
    min-height: 100%;
    padding: 0;
    margin: 0;
    color: #000;
    background: #f0f0f0;
    font-family: 'Rosario', 'Roboto', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    font-size: 14px;
    overflow: hidden;
  }

  html.dark, body.dark {
    background: #1c1c1c;
  }

  @media (min-width: 480px) {
    html, body {
      font-size: 16px;
    }
  }
</style>
