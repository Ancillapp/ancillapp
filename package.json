{
  "name": "ancillapp",
  "version": "1.6.0",
  "description": "Ancillapp",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "lerna run start --stream",
    "build": "lerna run build --stream",
    "start:pwa": "npm --prefix pwa start",
    "build:pwa": "npm --prefix pwa run build",
    "start:functions": "npm --prefix functions start",
    "build:functions": "npm --prefix functions run build",
    "postinstall": "lerna bootstrap --hoist --strict && patch-package && rm -rf node_modules/app-datepicker/node_modules",
    "build:sitemap": "node scripts/sitemap"
  },
  "devDependencies": {
    "firebase-tools": "^8.9.2",
    "lerna": "^3.22.1",
    "patch-package": "^6.2.2",
    "typescript": "^4.0.2"
  }
}
