{
  "hosting": [
    {
      "target": "production",
      "public": "pwa/dist/",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/songs",
          "function": "production-getSongs"
        },
        {
          "source": "/api/songs/*",
          "function": "production-getSong"
        },
        {
          "source": "/api/prayers",
          "function": "production-getPrayers"
        },
        {
          "source": "/api/prayers/*",
          "function": "production-getPrayer"
        },
        {
          "source": "/api/ancillas",
          "function": "production-getAncillas"
        },
        {
          "source": "/api/ancillas/*",
          "function": "production-getAncilla"
        },
        {
          "source": "/api/notifications/subscribe",
          "function": "production-subscribeForNotifications"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "pwa/dist/",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/songs",
          "function": "staging-getSongs"
        },
        {
          "source": "/api/songs/*",
          "function": "staging-getSong"
        },
        {
          "source": "/api/prayers",
          "function": "staging-getPrayers"
        },
        {
          "source": "/api/prayers/*",
          "function": "staging-getPrayer"
        },
        {
          "source": "/api/ancillas",
          "function": "staging-getAncillas"
        },
        {
          "source": "/api/ancillas/*",
          "function": "staging-getAncilla"
        },
        {
          "source": "/api/notifications/subscribe",
          "function": "staging-subscribeForNotifications"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "**/sw.js",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  }
}
