{
  "functions": {
    "predeploy": "npm --prefix functions run build"
  },
  "hosting": {
    "public": "pwa/dist/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/songs",
        "function": "getSongs"
      },
      {
        "source": "/api/ancillas",
        "function": "getAncillas"
      },
      {
        "source": "/api/notifications/subscribe",
        "function": "subscribeForNotifications"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  }
}
