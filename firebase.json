{
  "functions": {
    "runtime": "nodejs16"
  },
  "hosting": {
    "site": "ancillapp-staging",
    "public": "pwa/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "i18n": {
      "root": "/localized-files"
    },
    "rewrites": [
      {
        "source": "/api/**",
        "function": "pwa-api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(woff2|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, stale-while-revalidate=31536000"
          }
        ]
      },
      {
        "source": "**/sw.js",
        "headers": [
          {
            "key": "Service-Worker-Allowed",
            "value": "/"
          },
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  }
}
