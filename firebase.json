{
  "hosting": [
    {
      "target": "production",
      "public": "pwa/dist/",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/songs",
          "function": "getSongsProduction"
        },
        {
          "source": "/api/songs/*",
          "function": "getSongProduction"
        },
        {
          "source": "/api/prayers",
          "function": "getPrayersProduction"
        },
        {
          "source": "/api/prayers/*",
          "function": "getPrayerProduction"
        },
        {
          "source": "/api/ancillas",
          "function": "getAncillasProduction"
        },
        {
          "source": "/api/ancillas/*",
          "function": "getAncillaProduction"
        },
        {
          "source": "/api/notifications/subscribe",
          "function": "subscribeForNotificationsProduction"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "pwa/dist/",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/songs",
          "function": "getSongsStaging"
        },
        {
          "source": "/api/songs/*",
          "function": "getSongStaging"
        },
        {
          "source": "/api/prayers",
          "function": "getPrayersStaging"
        },
        {
          "source": "/api/prayers/*",
          "function": "getPrayerStaging"
        },
        {
          "source": "/api/ancillas",
          "function": "getAncillasStaging"
        },
        {
          "source": "/api/ancillas/*",
          "function": "getAncillaStaging"
        },
        {
          "source": "/api/notifications/subscribe",
          "function": "subscribeForNotificationsStaging"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "**/sw.js",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  }
}
